<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Musify || By Anurag Parashar</title>
    <link rel="shortcut icon" href="../images/dazzle-music-disc.png" type="image/x-icon">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Alegreya+Sans+SC:wght@300&family=Almendra+SC&family=Babylonica&family=Permanent+Marker&family=Playfair+Display&family=Yeon+Sung&display=swap" rel="stylesheet"></head>
    
</head>
<body>
    <div id="main">
         <div id="left"></div>
         <div id="right">
            <div id="nav">
                <h4>Musify</h4>
                <button id="navbtn">Sign-Up</button>
            </div>
            <div id="loginpage">
               
                <div id="form">
                  
                    <h5>Log-in into Account</h5>
                    <form action="/login" method="post">
                         <input type="text" name="username" id="" placeholder="Enter Your Username" required>
                        <input type="password" name="password" id="" placeholder="Password" required>
                        <input id="submit" type="submit" value="Login">
                        
                    </form>
                    <span id="reset" style="text-align: center; color: white; cursor: pointer;">Forget Password Click to reset</span>
                    <p>Don't have account sign-up now</p>
                    <small>By log-in an account you are agree and <br> accept our <a href="">Terms</a> and <a href="">Privacy Policy</a></small>
                    </div>
            </div>
            <div id="signuppage">
                
                <div id="form">
                    <h5>Create an Account</h5>
                    <form action="/register" method="post">
                         <input type="text" name="name" id="" placeholder="Enter your Name">
                         <input type="text" name="username" id="" placeholder="Enter Your username" required>
                         <input type="email" name="email" id="" placeholder="E-mail Address" required>
                         <input type="tel" name="phonenum" id="" placeholder="Phone Number">
                        <input type="password" name="password" id="" placeholder="Password" required>
                        <br>
                        <input id="submit" type="submit" value="Create Account">
                        
                    </form>
                    
                    <small>On Creating an account you are agree and <br> accept our <a href="">Terms</a> and <a href="">Privacy Policy</a></small>
                    </div>
            </div>
            <div id="resetpage">
           
                <div id="form" style="text-align: center;">
                    
                    <span style="text-align: center;">Please Enter Your register mail id for resetting the password</span>
                    <br>
                    <form action="/forgetpassword" method="post" id="forget">
                         <input type="text" name="email" placeholder="Enter Your Mail-Id">
                         <br>
                        <input id="submit" type="submit" value="Send">
                        
                    </form>
                    </div>
            </div>
         </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.2/axios.min.js" integrity="sha512-NCiXRSV460cHD9ClGDrTbTaw0muWUBf/zB/yLzJavRsPNUl9ODkUVmUHsZtKu17XknhsGlmyVoJxLg/ZQQEeGA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
 
    <script>
        var flag = 0;
       
      
       document.querySelector('#navbtn').addEventListener("click",function(req,res){

           if(flag === 0){
            document.querySelector("#loginpage").style.display="none"
       document.querySelector("#signuppage").style.display="initial";
       document.querySelector("#resetpage").style.display = "none"
     
       document.querySelector('#navbtn').innerHTML="Log-in"
       flag = 1;
           }else if(flag === 1){
            document.querySelector("#signuppage").style.display="none";
            document.querySelector("#resetpage").style.display = "none"
     
            document.querySelector("#loginpage").style.display="initial"
      document.querySelector('#navbtn').innerHTML="Sign-up"
      
   
   flag=0;  
           }
   })
        
       document.querySelector("#reset").addEventListener("click",function(){
        document.querySelector("#loginpage").style.display="none"
        document.querySelector("#resetpage").style.display = "initial"
       })
    
   
   </script>
</body>
</html>