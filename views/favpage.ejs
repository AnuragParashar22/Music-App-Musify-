    </div>
    <div id="main">
        <div id="left">
            <a href="/main"><i class="ri-home-3-line"></i>&nbsp;&nbsp;&nbsp;Home</a>
            <a href="/allsongs"><i class="ri-play-circle-fill"></i>&nbsp;&nbsp;&nbsp;All-Songs</a>
            <a href="/myplaylist"><i class="ri-play-list-line"></i>&nbsp;&nbsp;&nbsp;My Playlist</a>
            <a href="/favourites"><i class="ri-heart-add-line"></i>&nbsp;&nbsp;&nbsp;Favourites </a>
            <a href="/createplaylist"><i class="ri-play-list-add-line"></i>&nbsp;&nbsp;&nbsp;Create Playlist</a>
            <hr style="opacity: 0.5;">
            <%data.playlist.forEach(function(play){%>
                <a href="/openplaylist/<%=play._id%>"><i class="ri-play-list-line"></i>&nbsp;&nbsp;&nbsp;<%=play.playlistname%></a>
           <% })%>
        </div>
        <div id="right">
            <div id="rights">
                <div id="righttop">
                    
                    <h1>Fav Songs</h1>
                    <br>
                    <div id="righttopbox">
                        <%data.favourites.reverse().forEach(function(songs){ %>
                            <a style="text-decoration: none; color: white;" href="/playsong/<%=songs._id%>">
                                <div id="songs">
                                    <div id="songinfo">
                                        <img src="<%=songs.img%>" alt="">
                                        <div id="songname">
                                            <h3><%=songs.songname%></h3>
                                            <h5><%=songs.Artistname%></h5>
                                        </div>
                                    </div>
                                    <div id="songopt">
                                        <a style="color: red;" title="Remove from Favourites" href="/remove/<%=songs._id%>">❤</a>
                                        <h6><%=songs.type%></h6>
                                         <div id="options">...
                                            
                                            <div id="optdrop">
                                                <a href="/playsong/<%=songs._id%>">Play Song</a>
                                                <a href="/remove/<%=songs._id%>">Remove from Favourites</a>

                                            </div>
                                       
                                            
                                         </div>
                                    </div>
                                </div>
                            </a>
                            
                      <%  })%>
                     
