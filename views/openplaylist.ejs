                            <a href="/deleteplay/<%=play._id%>">Delete &nbsp;&nbsp;<i class="ri-delete-bin-5-line"></i></a>
                        </div>
                    </div>
                    
                    
                    
                    <br>
                    <div id="righttopbox">
                        <%play.songs.forEach(function(songs){ %>
                            
                                <div id="musicbox">
