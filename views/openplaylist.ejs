            <a href="/createplaylist"><i class="ri-play-list-add-line"></i>&nbsp;&nbsp;&nbsp;Create Playlist</a>
            <hr style="opacity: 0.5;">
            <%data.playlist.forEach(function(play){%>
                <a href="/openplaylist/<%=play._id%>"><i class="ri-play-list-line"></i>&nbsp;&nbsp;&nbsp;<%=play.playlistname%></a>
           <% })%>
        </div>
        <div id="uploadform">
            <span style="float: right; cursor: pointer;">Close X</span>
            <h1>Edit Your Playlist</h1>
            
            <form action="/editplay/<%=play._id%>" method="post">
                
                    <label  for="formFile" class="form-label">Edit Your Playlist name</label>
                    <input type="text" name="name" placeholder="Your playlist Name">
                  
                 <input style="margin-left: auto; margin-right: auto;  width: fit-content;" type="submit" id="submit" value="Submit">
            </form>
        </div>
        <div id="right">
            <div id="rights">

