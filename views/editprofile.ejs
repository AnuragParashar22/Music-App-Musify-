        <div id="uploadform">
            <h1>Edit Your Profile</h1>
            <form action="/editprofile" method="post" enctype="multipart/form-data">
                <div  class="mb-3">
                    <label  for="formFile" class="form-label">Edit Your Name</label><br>
                    <input type="text" name="name" placeholder="Your Name" value="<%=user.name%>">
                  </div>
                <div  class="mb-3">
                    <label  for="formFile" class="form-label">Edit Your Username</label><br>
                    <input type="text"  name="username" placeholder="Your Userame" value="<%=user.username%>" disabled>
                  </div>
                <div  class="mb-3">
                    <label  for="formFile" class="form-label">Edit Your email</label><br>
                    <input type="email" name="email" placeholder="Your Email" value="<%=user.email%>">
                  </div>
                <div  class="mb-3">
                    <label  for="formFile" class="form-label">Edit Your Phonenum</label><br>
                    <input type="number" name="phonenum" placeholder="Your Phone Number" value="<%=user.phonenum%>">
                  </div>
                <div  class="mb-3">
                    <label  for="formFile" class="form-label">Edit Your Date of Birth</label><br>
                    <input type="text" id="name" name="dob" placeholder="Your Date Of Birth" value="<%=user.dob%>">
                  </div>
                  <br>      
                 <div  class="mb-4">
                    <label  for="formFile" class="form-label">Edit Profile Image</label><br>
                    <input style="background-color: black; color: white;" class="form-control" type="file" name="file" accept="image/png, image/jpg, image/jpeg" id="formFile">
                  </div>
                  <br>
                 <input type="submit" id="submit" value="Submit">
            </form>
        </div>
