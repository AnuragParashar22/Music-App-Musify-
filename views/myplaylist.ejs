        <div id="navleft"><a href="/myprofile">My Account</a>
            <a href="/logout">Logout</a></div>
        
    </div>
    <div id="main">
        <div id="left">
            <a href="/main"><i class="ri-home-3-line"></i>&nbsp;&nbsp;&nbsp;Home</a>
