}
html,body{
    width: 100%;
    height: 100%;
}

#main{
    width: 100%;
    height: 91vh;
    background-color: rgb(25, 25, 25);
    display: flex;
    /* overflow: scroll; */
}
#left{
    width: 20%;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 30px;
    background-color: black;
    padding: 2.5vw;
    
}
#left>a{
   
    font-family: gilroy;
    color: white;
    text-decoration: none;
    font-size: 1.4vw;
    display: flex;
    align-items: center;
}
#right{
    width: 80%;
    height: 100%;
    /* overflow: scroll; */
}

#rights{width: 100%;
height: 90vh;}
#righttop{
    width: 100%;
    height: 100%;
    /* background-color: antiquewhite; */
    font-family: gilroy;
    /* padding: 2vw; */
    overflow: scroll;
    padding-top: 2vw;
    padding-left: 2vw;
}
#righttop::-webkit-scrollbar{
    display: none;
}
#righttop>h1{
    font-size: 2vw;
    font-weight: 500;
    display: flex;
    position: relative;
    color: white;
    margin-bottom: 1.2vw;
}
#righttopbox{
    width: 100%;
    height: 70%;
    display: flex;
    gap: 2.5vw;
    flex-wrap: wrap;
    /* overflow: scroll; */
    padding-left: 1vw;

    /* background-color: red; */
}
#righttopbox::-webkit-scrollbar{
    display: none;
}
#musicbox{
    width: 200px;
    height: 280px;
    background-color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    color: white;
    border-radius: 10px;
    overflow: hidden;
}
#musicbox>img{
    width: 80%;
    height: 60%;
    object-fit: cover;
    object-position: center;
    margin-bottom: 10px;
}
#musicbox>h1{
    text-align: start;
    font-weight: 500;
    font-size: 1.3vw;
    margin-bottom: 5px;
}
#musicbox>h2{
    text-align: start;
    font-weight: 500;
    font-size: 0.9vw;
    text-align: center;
}
#righttopbox>a{
text-decoration: none;
}

#nav{
    width: 100%;
    height: 9vh;
    font-family: gilroy;
   
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 4vw;
    padding-right: 2vw;
    color: white;
    background-color: black;
    /* margin-bottom: 2px; */
    border-bottom: 2px solid rgb(232, 36, 36);
    
    /* background-color: rgb(222, 197, 197); */
}
#nav>#navleft>a{
    text-decoration: none;
    padding-left: 2vw;
    padding-right: 2vw;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    border: 1px solid white;
}
#navright{
    display: flex;
    align-items: center;
    justify-content: center;
}

#navright>h1{
    margin-left: 15px;
    font-weight: 500;
    letter-spacing: 3px;
    font-family: voyage;
    font-size: 2vw;
    /* text-transform: u; */
}
#navleft{
    display: flex;
    gap: 20px;
}

#navright>.ri-menu-line{
display: none;
}


