            <%data.playlist.forEach(function(play){%>
                <a href="/openplaylist/<%=play._id%>"><i class="ri-play-list-line"></i>&nbsp;&nbsp;&nbsp;<%=play.playlistname%></a>
           <% })%>
        </div>
        <div id="right">
            <div id="rights">
                <div id="righttop">
                    
                    <h1>My Playlist -</h1>
                    <br>
                    <div id="righttopbox">
                        <% data.playlist.forEach(function(play){ %>
                            <a href="/openplaylist/<%=play._id%>">
                                <div id="musicbox">
                                    <img src="https://images.unsplash.com/photo-1614680376573-df3480f0c6ff?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1974&q=80" alt="">
