<body>
    <div id="main">
        
        <div id="uploadform">
            <h1>Enter the Songs Details</h1>
            <form action="/songupload" method="post" enctype="multipart/form-data">
                <input type="text" name="songname" placeholder="Enter the Song Name">
                <input type="text" name="artistname" placeholder="Enter the Artist Name">
                <input type="date" name="date" placeholder="Enter the Release Date">
                 <div style="width: 500px;" class="mb-4">
                    <label for="formFile" class="form-label">Enter the Album Image</label>
                    <input style="background-color: black; color: white;" class="form-control" type="file" name="image" accept="image/png, image/jpg, image/jpeg" id="formFile">
                  </div>
                 <div  class="mb-4">
                    <label  for="formFile" class="form-label">Enter the Album Audio</label>
                    <input style="background-color: black; color: white;" class="form-control" type="file" name="audio" accept="audio/mp3" id="formFile">
                  </div>
                  <div style="width:500px" class="input-group mb-4">
                    <label class="input-group-text" for="inputGroupSelect01">Options</label>
                    <select class="form-select" id="inputGroupSelect01" name="type">
                      <option selected>Choose the song type</option>
                      <option value="Romantic">Romantic Songs</option>
                      <option value="Bhajan">Bhajan</option>
                      <option value="Lo-Fi">Lo-Fi Songs</option>
                      <option value="Punjabi">Punjabi Songs</option>
                      <option value="English">English Songs</option>
                    </select>
                  </div>
                 <input type="submit" id="submit" value="Submit">
            </form>
        </div>
    </div>
