<body>
    <div id="main">
        
        <div id="uploadform">
            <h1>Edit Your Song Detail's</h1>
            <form action="/songedit/<%=data._id%>" method="post" >
                <input type="text" name="songname" placeholder="Enter the Song Name" value="<%=data.songname%>">
                <input type="text" name="artistname" placeholder="Enter the Artist Name" value="<%=data.Artistname%>">
                <input type="text" name="date" placeholder="Enter the Release Date" value="<%=data.Releasedate%>">
                 
                  <div style="width:500px" class="input-group mb-4">
                    <label class="input-group-text" for="inputGroupSelect01">Options</label>
                    <select class="form-select" id="inputGroupSelect01" name="type" >
                      <option selected><%=data.type%></option>
                      <option value="Romantic">Romantic Songs</option>
                      <option value="Bhajan">Bhajan</option>
                      <option value="Lo-Fi">Lo-Fi Songs</option>
                      <option value="Punjabi">Punjabi Songs</option>
                      <option value="English">English Songs</option>
                    </select>
                  </div>
                 <input type="submit" id="submit" value="Submit">
            </form>
            
           
            <div style="position: absolute;" id="diff">
                
                <img src="<%=data.img%>" alt="">
                <form action="/songimgedit/<%=data._id%>" method="post" enctype="multipart/form-data">
                    <label for="Image"><i class="ri-camera-line"></i></label>
                    <input type="file" name="file" id="Image">
                    <input type="submit" value="Upload">
                </form>
            </div>
            
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</body>
